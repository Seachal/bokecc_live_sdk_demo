<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51000000">

    <RelativeLayout
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:minHeight="165dp">

        <TextView
            android:id="@+id/exit_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="你确认结束观看吗？"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exit_tip"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_exit"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:textColor="#38404b"
                android:gravity="center"
                android:background="@drawable/exit_popup_concel_bg"
                android:text="取消" />

            <TextView
                android:id="@+id/confirm_exit"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:background="@drawable/exit_popup_confirm_bg"
                android:text="确认"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>